root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 4
# To disable specific ktlint rules, add them here
# For example, to disable the 'class-naming' rule:
ktlint_class_naming = disabled